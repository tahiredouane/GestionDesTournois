{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Groupe</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ entity.intitule }}</td>
            </tr>
            <tr>
                <th>Tablename</th>
                <td>{{ entity.tableName }}</td>
            </tr>
            <tr>
                <th>Str1</th>
                <td>{{ entity.str1 }}</td>
            </tr>
            <tr>
                <th>Str2</th>
                <td>{{ entity.str2 }}</td>
            </tr>
            <tr>
                <th>Str3</th>
                <td>{{ entity.str3 }}</td>
            </tr>
            <tr>
                <th>Int1</th>
                <td>{{ entity.int1 }}</td>
            </tr>
            <tr>
                <th>Int2</th>
                <td>{{ entity.int2 }}</td>
            </tr>
            <tr>
                <th>Int3</th>
