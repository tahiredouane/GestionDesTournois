        <ul class="record_actions">
    <li>
        <a href="{{ path('groupe') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('groupe_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('groupe_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
