{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Tournois list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Intitule</th>
                <th>Dtdebut</th>
                <th>Dtfin</th>
                <th>Nbrequipe</th>
                <th>Responsable</th>
                <th>Etat</th>
                <th>Commentaire</th>
                <th>Str1</th>
                <th>Str2</th>
                <th>Int1</th>
                <th>Int2</th>
                <th>Dtcreation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tournois_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.intitule }}</td>
                <td>{% if entity.dtDebut %}{{ entity.dtDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dtFin %}{{ entity.dtFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.nbrEquipe }}</td>
                <td>{{ entity.responsable }}</td>
                <td>{{ entity.etat }}</td>
                <td>{{ entity.commentaire }}</td>
                <td>{{ entity.str1 }}</td>
                <td>{{ entity.str2 }}</td>
                <td>{{ entity.int1 }}</td>
                <td>{{ entity.int2 }}</td>
                <td>{% if entity.dtCreation %}{{ entity.dtCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tournois_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tournois_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tournois_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
